{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://test.eclipse.fennec/person/1.0",
  "title": "Person Schema",
  "type": "object",
  "definitions": {
    "Person": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The person's name"
        },
        "age": {
          "type": "integer",
          "description": "The person's age",
          "minimum": 0
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The person's email address"
        }
      },
      "required": ["name"]
    },
    "Address": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "zipCode": {
          "type": "string"
        },
        "country": {
          "type": "string"
        }
      }
    }
  }
}

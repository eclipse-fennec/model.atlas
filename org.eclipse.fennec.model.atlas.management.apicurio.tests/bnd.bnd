Bundle-Name: Model Atlas Cloud - Apicurio Management Tests
Bundle-Description: OSGi integration tests for apicurio management and document storage components. Tests file operations, storage backends.

Test-Cases: ${classes;HIERARCHY_INDIRECTLY_ANNOTATED;org.junit.platform.commons.annotation.Testable;CONCRETE}

-workingset: Workflow

-library: \
	enableOSGi-Test,\
	enable-emf

# sets the usually required buildpath using the bnd library, you can extend it with the normal -buildpath to your liking
-buildpath: \
	org.osgi.framework;version=latest,\
	org.osgi.util.promise;version=latest,\
	org.osgi.util.function;version=latest,\
	org.osgi.service.cm;version=latest,\
	org.osgi.test.junit5.cm;version=latest,\
	org.eclipse.fennec.model.atlas.management;version=snapshot,\
	org.eclipse.fennec.model.atlas.management.lucene;version=snapshot,\
	org.eclipse.fennec.model.atlas.management.lucene.tests;version=snapshot,\
	org.eclipse.fennec.model.atlas.management.apicurio;version=snapshot,\
	org.testcontainers:junit-jupiter,\
	org.testcontainers:testcontainers
	
Bundle-Version: 1.0.0.SNAPSHOT

# Sometimes without DynamicImport Mockito will not find certain classes
#DynamicImport-Package: *
<?xml version="1.0" encoding="UTF-8"?>
<governance:Policy xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:governance="https://datainmotion.com/mac/governance/1.0.0" xsi:schemaLocation="https://datainmotion.com/mac/governance/1.0.0 governance.ecore" policyId="din-spec-91377.default.en" name="DIN SPEC 91377: Open Urban Platform (OUP) Core" description="A set of policy requirements based on the key chapters and architectural principles of the DIN SPEC 91377 for Open Urban Platforms.">
  <requirementGroups name="Chapter 4: Conceptual Framework of Open Urban Platforms" description="Core concepts and principles for the design and operation of an OUP.">
    <requirements requirementId="dinspec91377.c4.5" name="4.5 OUP Core System Architecture" description="The OUP core must be structured according to the specified horizontal layers (Interfaces, Processing, Integration) and the cross-cutting vertical layer (Management)." documentationLink="urn:din:spec:91377"/>
    <requirements requirementId="dinspec91377.c4.6" name="4.6 Model-centric Data Flow" description="The platform must follow the model-centric data flow concept, utilizing a Model and Data Flow Management (MDM) component to configure its software modules and ensure data interoperability." documentationLink="urn:din:spec:91377"/>
  </requirementGroups>
  <requirementGroups name="Chapter 5: OUP Core Architecture in Detail" description="Specific requirements for the individual layers of the OUP core architecture.">
    <requirements requirementId="dinspec91377.c5.3" name="5.3 Interfaces Layer Interoperability" description="The Interfaces Layer must provide standardized connectors and support open protocols (e.g., MQTT, AMQP, OGC API) for inbound data from various sources." documentationLink="urn:din:spec:91377"/>
    <requirements requirementId="dinspec91377.c5.4" name="5.4 Processing Layer Capabilities" description="The Processing Layer must provide capabilities for data transformation, enrichment, analysis, and validation, including support for real-time and batch processing." documentationLink="urn:din:spec:91377"/>
    <requirements requirementId="dinspec91377.c5.5" name="5.5 Integration Layer API Standards" description="The Integration Layer must provide open, standardized APIs (e.g., OGC API Features, SensorThings API) for outbound data to ensure interoperability with external applications and services." documentationLink="urn:din:spec:91377"/>
    <requirements requirementId="dinspec91377.c5.6" name="5.6 Management Layer Services" description="The Management Layer must provide essential cross-cutting services, including Identity and Access Management (IAM) based on standards like OIDC/SAML, a DCAT-AP compliant Data Catalog, and comprehensive API Management." documentationLink="urn:din:spec:91377"/>
  </requirementGroups>
  <requirementGroups name="Chapter 6: Information Security" description="Requirements for a holistic information security concept for the OUP.">
    <requirements requirementId="dinspec91377.c6.1" name="6.1 Holistic Security Concept" description="A holistic information security concept must be applied, covering data security (confidentiality, integrity, availability), identity and access management, and secure communication (e.g., mandatory TLS)." documentationLink="urn:din:spec:91377"/>
    <requirements requirementId="dinspec91377.c6.2" name="6.2 Data Security" description="Measures must be in place to ensure the confidentiality, integrity, and availability of data throughout its lifecycle within the platform." documentationLink="urn:din:spec:91377"/>
  </requirementGroups>
</governance:Policy>

<?xml version="1.0" encoding="UTF-8"?>
<governance:Policy xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:governance="https://datainmotion.com/mac/governance/1.0.0" xsi:schemaLocation="https://datainmotion.com/mac/governance/1.0.0 governance.ecore" policyId="iso27001.default.en" type="ISO_27001" name="ISO/IEC 27001:2022 Controls" description="A comprehensive set of policy requirements based on the Annex A controls of the ISO/IEC 27001:2022 standard, structured by the four main themes.">
  <requirementGroups name="A.5 Organizational Controls" description="Controls related to the organizational structure, policies, processes, and responsibilities for information security.">
    <requirements requirementId="iso27001.a.5.1" name="A.5.1 Policies for information security" description="A set of policies for information security shall be defined, approved by management, published and communicated." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.2" name="A.5.2 Information security roles and responsibilities" description="Information security roles and responsibilities shall be defined and allocated." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.3" name="A.5.3 Segregation of duties" description="Conflicting duties and areas of responsibility shall be segregated." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.4" name="A.5.4 Management responsibilities" description="Management shall require all personnel to apply information security in accordance with the established policies." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.5" name="A.5.5 Contact with authorities" description="The organization shall establish and maintain contact with relevant authorities." documentationLink="https://www.iso.org/standard/27001" modality="SHOULD"/>
    <requirements requirementId="iso27001.a.5.6" name="A.5.6 Contact with special interest groups" description="The organization shall establish and maintain contact with special interest groups or other specialist security forums and professional associations." documentationLink="https://www.iso.org/standard/27001" modality="SHOULD"/>
    <requirements requirementId="iso27001.a.5.7" name="A.5.7 Threat intelligence" description="Information relating to information security threats shall be collected and analysed to produce threat intelligence." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.8" name="A.5.8 Information security in project management" description="Information security shall be integrated into project management." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.9" name="A.5.9 Inventory of information and other associated assets" description="An inventory of information and other associated assets, including their owners, shall be identified and maintained." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.10" name="A.5.10 Acceptable use of information and other associated assets" description="Rules for the acceptable use and procedures for handling information and other associated assets shall be identified, documented and implemented." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.11" name="A.5.11 Return of assets" description="Personnel and other interested parties as appropriate shall return all the organization’s assets in their possession upon change or termination of their employment, contract or agreement." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.12" name="A.5.12 Classification of information" description="Information shall be classified in terms of legal requirements, value, criticality and sensitivity to unauthorized disclosure or modification." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.13" name="A.5.13 Labelling of information" description="An appropriate set of procedures for information labelling shall be developed and implemented in accordance with the information classification scheme." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.14" name="A.5.14 Information transfer" description="Information transfer rules, procedures, or agreements shall be in place for all types of transfer facilities within the organization and between the organization and other parties." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.15" name="A.5.15 Access control" description="Access to information and other associated assets shall be based on business and information security requirements and be limited to authorized users, processes or other systems." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.16" name="A.5.16 Identity management" description="The full lifecycle of identities shall be managed." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.17" name="A.5.17 Authentication information" description="Allocation and management of authentication information shall be controlled by a management process, including advising personnel on the appropriate handling of authentication information." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.18" name="A.5.18 Access rights" description="Access rights to information and other associated assets shall be provisioned, reviewed, modified and removed in accordance with the organization's topic-specific policy on and rules for access control." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.19" name="A.5.19 Information security in supplier relationships" description="Processes and procedures shall be defined and implemented to manage the information security risks associated with the use of supplier’s products or services." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.20" name="A.5.20 Addressing information security within supplier agreements" description="Relevant information security requirements shall be established and agreed with each supplier based on the types of supplier relationship." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.21" name="A.5.21 Managing information security in the ICT supply chain" description="Processes and procedures shall be defined and implemented to manage the information security risks associated with the ICT products and services supply chain." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.22" name="A.5.22 Monitoring, review and change management of supplier services" description="The organization shall regularly monitor, review, evaluate and manage change in supplier information security practices and service delivery." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.23" name="A.5.23 Information security for use of cloud services" description="Processes for acquisition, use, management and exit from cloud services shall be established in accordance with the organization's information security requirements." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.24" name="A.5.24 Information security incident management planning and preparation" description="The organization shall plan and prepare for managing information security incidents by defining, establishing and communicating information security incident management processes, roles and responsibilities." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.25" name="A.5.25 Assessment and decision on information security events" description="The organization shall assess information security events and decide if they are to be categorized as information security incidents." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.26" name="A.5.26 Response to information security incidents" description="Information security incidents shall be responded to in accordance with the documented procedures." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.27" name="A.5.27 Learning from information security incidents" description="Knowledge gained from information security incidents shall be used to strengthen and improve the information security controls." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.28" name="A.5.28 Collection of evidence" description="The organization shall establish and implement procedures for the identification, collection, acquisition and preservation of evidence related to information security events." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.29" name="A.5.29 Information security during disruption" description="The organization shall plan how to maintain information security at an appropriate level during disruption." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.30" name="A.5.30 ICT readiness for business continuity" description="ICT readiness shall be planned, implemented, maintained and tested, based on business continuity objectives and ICT continuity requirements." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.31" name="A.5.31 Legal, statutory, regulatory and contractual requirements" description="Legal, statutory, regulatory and contractual requirements relevant to information security and the organization’s approach to meet these requirements shall be identified, documented and kept up to date." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.32" name="A.5.32 Intellectual property rights" description="The organization shall implement appropriate procedures to protect intellectual property rights." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.33" name="A.5.33 Protection of records" description="Records shall be protected from loss, destruction, falsification, unauthorized access and unauthorized release." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.34" name="A.5.34 Privacy and protection of PII" description="The organization shall identify and meet the requirements regarding the preservation of privacy and protection of Personally Identifiable Information (PII) according to applicable laws and regulations and contractual requirements." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.35" name="A.5.35 Independent review of information security" description="The organization’s approach to managing information security and its implementation shall be reviewed independently at planned intervals, or when significant changes occur." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.36" name="A.5.36 Compliance with policies and standards for information security" description="Compliance with the organization’s information security policies, rules and standards shall be regularly reviewed." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.5.37" name="A.5.37 Documented operating procedures" description="Operating procedures for information processing facilities shall be documented and made available to personnel who need them." documentationLink="https://www.iso.org/standard/27001" modality="SHOULD"/>
  </requirementGroups>
  <requirementGroups name="A.6 People Controls" description="Controls related to human resources security before, during, and after employment.">
    <requirements requirementId="iso27001.a.6.1" name="A.6.1 Screening" description="Background verification checks on all candidates to become personnel shall be carried out in accordance with applicable laws, regulations and ethics and be proportional to the business requirements, the classification of the information to be accessed and the perceived risks." documentationLink="https://www.iso.org/standard/27001" modality="SHOULD"/>
    <requirements requirementId="iso27001.a.6.2" name="A.6.2 Terms and conditions of employment" description="The contractual or documented terms and conditions of employment shall state the personnel’s and the organization’s responsibilities for information security." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.6.3" name="A.6.3 Information security awareness, education and training" description="Personnel of the organization and relevant interested parties shall receive appropriate information security awareness, education and training and regular updates of the organization's information security policies, topic-specific policies and procedures, as relevant for their job function." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.6.4" name="A.6.4 Disciplinary process" description="A formal and communicated disciplinary process shall be in place to take action against personnel who have committed an information security policy violation." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.6.5" name="A.6.5 Responsibilities after termination or change of employment" description="Information security responsibilities and duties that remain valid after termination or change of employment shall be defined, enforced and communicated to relevant personnel and other interested parties." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.6.6" name="A.6.6 Confidentiality or non-disclosure agreements" description="Confidentiality or non-disclosure agreements that reflect the organization's needs for the protection of information shall be identified, documented, regularly reviewed and signed by personnel and other relevant interested parties." documentationLink="https://www.iso.org/standard/27001" modality="SHOULD"/>
    <requirements requirementId="iso27001.a.6.7" name="A.6.7 Remote working" description="Security measures shall be implemented when personnel are working remotely to protect information accessed, processed or stored outside the organization’s premises." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.6.8" name="A.6.8 Information security event reporting" description="The organization shall provide a mechanism for personnel to report observed or suspected information security events through appropriate channels in a timely manner." documentationLink="https://www.iso.org/standard/27001"/>
  </requirementGroups>
  <requirementGroups name="A.7 Physical Controls" description="Controls related to the physical and environmental security of the organization's premises and equipment.">
    <requirements requirementId="iso27001.a.7.1" name="A.7.1 Physical security perimeters" description="Security perimeters shall be defined and used to protect areas that contain information and other associated assets." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.7.2" name="A.7.2 Physical entry" description="Secure areas shall be protected by appropriate entry controls and access points." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.7.3" name="A.7.3 Securing offices, rooms and facilities" description="Physical security for offices, rooms and facilities shall be designed and implemented." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.7.4" name="A.7.4 Physical security monitoring" description="Premises shall be continuously monitored for unauthorized physical access." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.7.5" name="A.7.5 Protecting against physical and environmental threats" description="Protection against physical and environmental threats, such as natural disasters and other intentional or unintentional physical threats to infrastructure, shall be designed and implemented." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.7.6" name="A.7.6 Working in secure areas" description="Security measures for working in secure areas shall be designed and implemented." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.7.7" name="A.7.7 Clear desk and clear screen" description="Rules for a clear desk for papers and removable storage media and a clear screen for information processing facilities shall be defined and appropriately enforced." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.7.8" name="A.7.8 Equipment siting and protection" description="Equipment shall be sited securely and protected." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.7.9" name="A.7.9 Security of assets off-premises" description="Off-premises assets shall be identified and appropriate information security controls shall be implemented." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.7.10" name="A.7.10 Storage media" description="Media shall be managed through their lifecycle of acquisition, use, transportation and disposal in accordance with the organization’s classification scheme and handling requirements." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.7.11" name="A.7.11 Supporting utilities" description="Information processing facilities shall be protected from power failures and other disruptions caused by failures in supporting utilities." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.7.12" name="A.7.12 Cabling security" description="Power, network and other supporting utility cables carrying information or supporting information services shall be protected from interception, interference or damage." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.7.13" name="A.7.13 Equipment maintenance" description="Equipment shall be maintained correctly to ensure its continued availability, integrity and functionality." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.7.14" name="A.7.14 Secure disposal or re-use of equipment" description="Items of equipment containing storage media shall be verified to ensure that all sensitive data and licensed software has been removed or securely overwritten prior to disposal or re-use." documentationLink="https://www.iso.org/standard/27001"/>
  </requirementGroups>
  <requirementGroups name="A.8 Technological Controls" description="Controls related to information and communication technology.">
    <requirements requirementId="iso27001.a.8.1" name="A.8.1 User endpoint devices" description="Information stored on, processed by, or accessible via user endpoint devices shall be protected." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.2" name="A.8.2 Privileged access rights" description="The allocation and use of privileged access rights shall be restricted and managed." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.3" name="A.8.3 Information access restriction" description="Access to information and other associated assets shall be restricted in accordance with the established topic-specific policy on access control." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.4" name="A.8.4 Access to source code" description="Read and write access to source code, development tools and software libraries shall be appropriately managed." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.5" name="A.8.5 Secure authentication" description="Secure authentication technologies and procedures shall be implemented based on information access restrictions and the topic-specific policy on access control." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.6" name="A.8.6 Capacity management" description="The use of resources shall be monitored and adjusted in line with current and expected capacity requirements." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.7" name="A.8.7 Protection against malware" description="Protection against malware shall be implemented and supported by appropriate user awareness." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.8" name="A.8.8 Management of technical vulnerabilities" description="Information about technical vulnerabilities of information systems in use shall be obtained, the organization’s exposure to such vulnerabilities shall be evaluated and appropriate measures shall be taken." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.9" name="A.8.9 Configuration management" description="Configurations, including security configurations, of hardware, software, services and networks should be established, documented, implemented, monitored and reviewed." documentationLink="https://www.iso.org/standard/27001" modality="SHOULD"/>
    <requirements requirementId="iso27001.a.8.10" name="A.8.10 Information deletion" description="Information stored in information systems, devices or in any other storage media shall be deleted when no longer required." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.11" name="A.8.11 Data masking" description="Data masking shall be used in accordance with the organization’s topic-specific policy on access control and other related topic-specific policies, and business requirements, taking applicable legislation into consideration." documentationLink="https://www.iso.org/standard/27001" modality="SHOULD"/>
    <requirements requirementId="iso27001.a.8.12" name="A.8.12 Data leakage prevention" description="Data leakage prevention measures shall be applied to systems, networks and any other devices that process, store or transmit sensitive information." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.13" name="A.8.13 Information backup" description="Backup copies of information, software and systems shall be maintained and regularly tested in accordance with the agreed topic-specific policy on backup." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.14" name="A.8.14 Redundancy of information processing facilities" description="Information processing facilities shall be implemented with sufficient redundancy to meet availability requirements." documentationLink="https://www.iso.org/standard/27001" modality="SHOULD"/>
    <requirements requirementId="iso27001.a.8.15" name="A.8.15 Logging" description="Logs that record activities, exceptions, faults and other relevant events shall be produced, stored, protected and analysed." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.16" name="A.8.16 Monitoring activities" description="Networks, systems and applications shall be monitored for anomalous behaviour and appropriate actions taken to evaluate potential information security incidents." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.17" name="A.8.17 Clock synchronization" description="The clocks of information processing systems used by the organization shall be synchronized to a single reference time source." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.18" name="A.8.18 Installation of software on operational systems" description="Procedures governing the installation of software on operational systems shall be implemented." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.19" name="A.8.19 Security of network services" description="Security mechanisms, service levels and service requirements of network services shall be identified, implemented and monitored." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.20" name="A.8.20 Segregation of networks" description="Security groups of information services, users and information systems shall be segregated in the organization’s networks." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.21" name="A.8.21 Web filtering" description="Access to external websites shall be managed to reduce exposure to malicious content." documentationLink="https://www.iso.org/standard/27001" modality="SHOULD"/>
    <requirements requirementId="iso27001.a.8.22" name="A.8.22 Use of cryptography" description="Rules for the effective use of cryptography, including cryptographic key management, shall be defined and implemented." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.23" name="A.8.23 Secure development life cycle" description="Rules for the secure development of software and systems shall be established and applied." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.24" name="A.8.24 Application security requirements" description="Information security requirements shall be identified, specified and approved when developing or acquiring applications." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.25" name="A.8.25 Security in development and acceptance processes" description="Processes for secure development, testing and deployment of applications shall be established and implemented." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.26" name="A.8.26 Outsourced development" description="The organization shall direct, monitor and review the activities related to outsourced system development." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.27" name="A.8.27 Secure coding" description="Secure coding principles shall be applied to software development." documentationLink="https://www.iso.org/standard/27001" modality="SHOULD"/>
    <requirements requirementId="iso27001.a.8.28" name="A.8.28 Security testing in development and acceptance" description="Security testing processes shall be defined and implemented in the development lifecycle." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.29" name="A.8.29 Separation of development, testing and production environments" description="Development, testing and production environments shall be separated and secured." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.30" name="A.8.30 Change management" description="Changes to information processing facilities and information systems shall be subject to a change management process." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.31" name="A.8.31 Test information" description="Information for use in testing shall be carefully selected, protected and managed." documentationLink="https://www.iso.org/standard/27001" modality="SHOULD"/>
    <requirements requirementId="iso27001.a.8.32" name="A.8.32 Protection of information systems during audit testing" description="Audit tests and other assurance activities involving assessment of operational systems shall be planned and agreed between the tester and appropriate management." documentationLink="https://www.iso.org/standard/27001"/>
    <requirements requirementId="iso27001.a.8.33" name="A.8.33 Protection of production data" description="Production data should not be used in development or test environments." documentationLink="https://www.iso.org/standard/27001" modality="SHOULD_NOT"/>
    <requirements requirementId="iso27001.a.8.34" name="A.8.34 Protection of information systems during audit and review" description="Audit and review activities shall be conducted without adverse impact on the organization's operations." documentationLink="https://www.iso.org/standard/27001"/>
  </requirementGroups>
</governance:Policy>
